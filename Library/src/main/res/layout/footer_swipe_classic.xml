<?xml version="1.0" encoding="utf-8"?>
<com.sunzn.swipe.library.view.ClassicLoadMoreFooterView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/refresh_header_height_60">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmallInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/tvLoadMore" />

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/tvLoadMore"
            android:background="@drawable/icon_success"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvLoadMore"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="LoadMore"
            android:textColor="?attr/colorPrimary" />

    </RelativeLayout>

</com.sunzn.swipe.library.view.ClassicLoadMoreFooterView>